{
  "extends": "airbnb",
  "globals": {
    "NylasEnv": false,
    "$n": false,
    "waitsForPromise": false,
    "advanceClock": false,
    "TEST_ACCOUNT_ID": false,
    "TEST_ACCOUNT_NAME": false,
    "TEST_ACCOUNT_ALIAS_EMAIL": false
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "rules": {
    "react/prop-types": [2, {"ignore": ["children"]}],
    "react/no-multi-comp": [0],
    "react/sort-comp": [2],
    "react/jsx-indent-props": [0],
    "react/no-deprecated": [1, {"react": "0.13.2"}],
    "react/jsx-closing-bracket-location": [0],
    "react/jsx-space-before-closing": [0],
    "react/prefer-stateless-function": [0],
    "max-len": [1, 180, 2],
    "object-shorthand": [0],
    "no-param-reassign": [0],
    "arrow-spacing": [0],
    "arrow-body-style": [0],
    "quote-props": [0],
    "indent": [0],
    "yield-star-spacing": [0],
    "prefer-template": [0],
    "eqeqeq": [2, "smart"],
    "id-length": [0],
    "object-curly-spacing": [0],
    "no-console": [0],
    "no-loop-func": [0],
    "no-constant-condition": [0],
    "new-cap": [2, {"capIsNew": false}],
    "no-shadow": [1],
    "quotes": [0],
    "semi": [0]
  },
  "parser": "babel-eslint"
}
